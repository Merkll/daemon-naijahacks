<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/frameLayout" android:background="#FF9800">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="409dp"
            android:layout_height="60dp"
            android:id="@+id/button_container"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        <Button
                android:text="Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/button2"
                android:layout_marginBottom="288dp" android:layout_weight="1"/>
        <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        <Button
                android:text="Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/button"
                android:layout_marginBottom="340dp" android:layout_weight="1"/>
        <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
